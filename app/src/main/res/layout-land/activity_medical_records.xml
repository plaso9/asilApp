<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MedicalRecordsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageButton
                android:id="@+id/imgBtnLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:paddingRight="28dp"
                app:srcCompat="@drawable/lang" />
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/medicalRecords"
                    android:textAllCaps="true"
                    android:textSize="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewLastMeasurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="138dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/lastMeasurement"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

                <!-- TEMPERATURE -->
                <TextView
                    android:id="@+id/textViewTemperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/temperature"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewLastMeasurement" />

                <ImageView
                    android:id="@+id/image_seeTemperatureStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTemperature"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewTemperature"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddTemperature"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTemperature"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewTemperature" />

                <!-- PRESSURE -->
                <TextView
                    android:id="@+id/textViewPressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/pressure"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewTemperature" />

                <ImageView
                    android:id="@+id/image_seeBloodPressureStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewPressure"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewPressure"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddBloodPressure"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewPressure"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewPressure"/>

                <!-- GLYCEMIA -->
                <TextView
                    android:id="@+id/textViewGlycemia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/glycemia"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPressure" />

                <ImageView
                    android:id="@+id/image_seeGlycemiaStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewGlycemia"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewGlycemia"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddGlycemia"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewGlycemia"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewGlycemia" />

                <!-- HEARTBEAT -->
                <TextView
                    android:id="@+id/textViewHeartbeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/heartbeat"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewGlycemia" />

                <ImageView
                    android:id="@+id/image_seeHeartbeatStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHeartbeat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewHeartbeat"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddHeartbeat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewHeartbeat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewHeartbeat" />

                <!-- ECG -->
                <TextView
                    android:id="@+id/textViewECG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/ecg"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHeartbeat" />

                <ImageView
                    android:id="@+id/image_seeECGStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewECG"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewECG"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddECG"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewECG"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewECG"/>

                <!-- SYMPTOMS -->
                <TextView
                    android:id="@+id/textViewSymptoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/symptoms"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewECG" />

                <ImageView
                    android:id="@+id/image_seeSymptomsStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewSymptoms"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewSymptoms"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddSymptoms"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewSymptoms"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewSymptoms"/>

                <!-- PATHOLOGY -->
                <TextView
                    android:id="@+id/textViewPathology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/pathology"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewSymptoms" />

                <ImageView
                    android:id="@+id/image_SeePathologyStats"
                    android:layout_width="34dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="65dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewPathology"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewPathology"
                    app:srcCompat="@drawable/graphic" />

                <Button
                    android:id="@+id/buttonAddPathology"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/add"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/buttonTextSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewPathology"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewPathology"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />


</android.support.v4.widget.DrawerLayout>