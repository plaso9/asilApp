<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UsefulNumbersActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageButton
                android:id="@+id/imgBtnLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:paddingRight="28dp"
                app:srcCompat="@drawable/lang" />
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!-- PAGE TITLE -->
                <ImageView
                    android:id="@+id/imageViewSeaEmergency"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/marginEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewSeaEmergencyNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewSeaEmergencyNumber"
                    app:srcCompat="@drawable/call" />

                <ImageView
                    android:id="@+id/imageViewFinanceGuard"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/marginEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFinanceGuardNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewFinanceGuardNumber"
                    app:srcCompat="@drawable/call" />

                <ImageView
                    android:id="@+id/imageViewMilitaryPolice"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/marginEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewMilitaryPoliceNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewMilitaryPoliceNumber"
                    app:srcCompat="@drawable/call" />

                <ImageView
                    android:id="@+id/imageViewFireBrigade"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/marginEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFireBrigadeNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewFireBrigadeNumber"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/call" />

                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="20dp"
                    android:text="@string/usefulNumbers"
                    android:textAllCaps="true"
                    android:textSize="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--    TEXT LINE COLUMN  -->
                <!--AMBULANCE-->
                <TextView
                    android:id="@+id/textViewAmbulance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="90dp"
                    android:text="@string/ambulance"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--FIRE BRIGADE-->
                <TextView
                    android:id="@+id/textViewFireBrigade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="32dp"
                    android:text="@string/firebrigade"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAmbulance" />
                <!--POLICE-->
                <TextView
                    android:id="@+id/textViewPolice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="32dp"
                    android:text="@string/police"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFireBrigade" />
                <!--MILITARY POLICE-->
                <TextView
                    android:id="@+id/textViewMilitaryPolice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="32dp"
                    android:text="@string/militarypolice"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPolice" />
                <!--FINANCE GUARD-->
                <TextView
                    android:id="@+id/textViewFinanceGuard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="32dp"
                    android:text="@string/financeguard"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewMilitaryPolice" />
                <!--SEA EMERGENCY-->
                <TextView
                    android:id="@+id/textViewSeaEmergency"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginStart"
                    android:layout_marginTop="32dp"
                    android:text="@string/seaemergency"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFinanceGuard" />


                <!--    EDIT LINE COLUMN  -->

                <!--AMBULANCE NUMMBER-->
                <TextView
                    android:id="@+id/textViewAmbulanceNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="118"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewAmbulance"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewAmbulance"
                    app:layout_constraintTop_toTopOf="@+id/textViewAmbulance"
                    app:layout_constraintVertical_bias="0.0" />
                <!--FIRE BRIGADE NUMBER-->
                <TextView
                    android:id="@+id/textViewFireBrigadeNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="115"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFireBrigade"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewFireBrigade"
                    app:layout_constraintTop_toTopOf="@+id/textViewFireBrigade"
                    app:layout_constraintVertical_bias="0.0" />
                <!--POLICE NUMBER-->
                <TextView
                    android:id="@+id/textViewPoliceNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="113"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewPolice"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewPolice"
                    app:layout_constraintTop_toTopOf="@+id/textViewPolice"
                    app:layout_constraintVertical_bias="0.0" />
                <!--MILITARY POLICE NUMBER-->
                <ImageView
                    android:id="@+id/imageViewPolice"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/marginEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewPoliceNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewPoliceNumber"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/call" />

                <TextView
                    android:id="@+id/textViewMilitaryPoliceNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="112"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewMilitaryPolice"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewMilitaryPolice"
                    app:layout_constraintTop_toTopOf="@+id/textViewMilitaryPolice"
                    app:layout_constraintVertical_bias="0.0" />
                <!--FINANCE GUARD NUMBER-->
                <TextView
                    android:id="@+id/textViewFinanceGuardNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="117"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewFinanceGuard"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewFinanceGuard"
                    app:layout_constraintTop_toTopOf="@+id/textViewFinanceGuard"
                    app:layout_constraintVertical_bias="0.0" />
                <!--SEA EMERGENCY NUMBER-->
                <TextView
                    android:id="@+id/textViewSeaEmergencyNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="1530"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/textSize"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewSeaEmergency"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewSeaEmergency"
                    app:layout_constraintTop_toTopOf="@+id/textViewSeaEmergency"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageViewAmbulance"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/marginEnd"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewAmbulanceNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/call" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>