<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".AdminActivity">



    <GridLayout
        android:id="@+id/gridAdminLayout"
        android:rowCount="2"
        android:columnCount="2"
        android:padding="14dp"
        android:layout_weight="8"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="50dp"
        android:columnOrderPreserved="false">

        <!-- ROW 1  -->

        <android.support.v7.widget.CardView
            android:id="@+id/card_addUser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/gradient"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_newUser"
                    android:src="@drawable/adduser"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:contentDescription="@string/addUser"/>

                <TextView
                    android:text="@string/addUser"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <!-- ROW 2  -->

        <android.support.v7.widget.CardView
            android:id="@+id/card_addAcceptance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_addAcceptance"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    android:src="@drawable/addacceptance"
                    android:contentDescription="@string/addAcceptance"/>

                <TextView
                    android:text="@string/addAcceptance"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- ROW 3  -->

        <android.support.v7.widget.CardView
            android:id="@+id/card_addFood"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_addFood"
                    android:layout_width="wrap_content"
                    android:layout_height="168dp"
                    android:src="@drawable/addfood"
                    android:contentDescription="@string/addFood"/>

                <TextView
                    android:text="@string/addFood"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- ROW 4  -->

        <android.support.v7.widget.CardView
            android:id="@+id/card_readRatings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_readRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="168dp"
                    android:src="@drawable/readratings"
                    android:contentDescription="@string/readRatings"/>

                <TextView
                    android:text="@string/readRatings"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/chatBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/chat"
            android:layout_margin="16dp" />

    </RelativeLayout>

</LinearLayout>